---
interface Props {
  image?: string;
  overlay?: boolean;
  color?: string;
  opacity?: number;
}

const { image, overlay = false, color = "#FAD6A5", opacity = 1 } = Astro.props;
---

<div class="background-image-wrapper">
  <div class="background-image" style={`background-image: url(${image});`}>
    {
      overlay && (
        <div
          class="overlay"
          style={`background-color: ${color}; opacity: ${opacity};`}
        />
      )
    }
  </div>
</div>

<style>
  .background-image-wrapper {
    position: relative;
    width: 100%;
  }

  .background-image {
    width: 100%;
    height: 80vh;
    object-fit: cover;
    clip-path: ellipse(79% 50% at 51% 27%);
  }

  .overlay {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }
</style>
