---
const { post } = Astro.props;
const { image_cover, title, description, date } = post.frontmatter;
---

<a
  href={post.url}
  class="transition-transform hover:scale-102 hover:ring-2 hover:ring-offset-2 hover:ring-peach-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-peach-500"
>
  <div
    class="flex px-8 w-full max-w-5xl mx-auto h-64 bg-peach-200 rounded-3xl shadow overflow-hidden"
  >
    <!-- Left section: the image -->
    <div class="w-1/3 h-full py-4">
      {
        image_cover ? (
          <img
            src={image_cover}
            alt={title}
            class="w-full h-full object-cover rounded-3xl"
          />
        ) : (
          <div class="w-full h-full bg-peach-500 flex items-center justify-center">
            <span class="text-2xl">Default</span>
          </div>
        )
      }
    </div>
    <!-- Right section: blog details -->
    <div class="w-2/3 p-4 flex flex-col justify-between">
      <div>
        <h2 class="text-2xl font-bold text-gray-900">{title}</h2>
        <p class="text-gray-600 mt-2">{description}</p>
      </div>
      <p class="text-sm text-gray-500">{date}</p>
    </div>
  </div>
</a>
