---
interface Props {
  profileImage?: string;
}

const { profileImage } = Astro.props as Props;
---

<div
  class="relative w-64 h-64 rounded-full border-4 border-white overflow-hidden bg-gray-300 z-10"
>
  {
    profileImage ? (
      <img
        src={profileImage}
        alt="Profile"
        class="w-full h-full object-cover"
      />
    ) : null
  }
</div>
