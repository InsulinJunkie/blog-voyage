---
import BaseLayout from "../layouts/base_layout.astro";
import BlogPost from "../components/blog_post.astro";
import BlogCard from "../components/blog_card.astro";
const pageTitle = "Liste des billets";
const allPosts = Object.values(
  import.meta.glob("./posts/*.md", { eager: true }),
);
---

<BaseLayout pageTitle={pageTitle}>
  <h1 class="text-4xl font-bold text-center mb-12 pt-8">{pageTitle}</h1>
  <div class="container mx-auto px-4 py-4">
    <div
      class="flex sm:w-full md:w-2/3 mx-auto flex-col items-center justify-center gap-8"
    >
      {allPosts.map((post) => <BlogCard post={post} />)}
    </div>
  </div>
</BaseLayout>
